@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Nhân viên kho | PetShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fb;
            font-family: 'Poppins', sans-serif;
        }

        .sidebar {
            width: 240px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            background: #1d3557;
            color: #fff;
            display: flex;
            flex-direction: column;
        }

            .sidebar .brand {
                font-size: 1.3rem;
                font-weight: 700;
                padding: 20px;
                border-bottom: 1px solid rgba(255,255,255,0.2);
                text-align: center;
            }

            .sidebar a {
                color: #dfe6e9;
                padding: 12px 20px;
                text-decoration: none;
                display: block;
                transition: 0.2s;
            }

                .sidebar a.active, .sidebar a:hover {
                    background: #457b9d;
                    color: #fff;
                }

        .main {
            margin-left: 240px;
            padding: 30px;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand"><i class="fa-solid fa-warehouse me-2"></i> Kho PetShop</div>
        <a asp-action="Index" asp-controller="Kho" class="active"><i class="fa-solid fa-gauge me-2"></i> Tổng quan</a>
        <a asp-action="HangHoa" asp-controller="Kho"><i class="fa-solid fa-boxes-stacked me-2"></i> Hàng hóa</a>
        <a asp-action="NhapKho" asp-controller="Kho"><i class="fa-solid fa-file-import me-2"></i> Phiếu nhập</a>
        <a asp-action="XuatKho" asp-controller="Kho"><i class="fa-solid fa-file-export me-2"></i> Phiếu xuất</a>
        <a asp-action="BaoCao" asp-controller="Kho"><i class="fa-solid fa-chart-line me-2"></i> Báo cáo</a>
    </div>

    <!-- Nội dung chính -->
    <div class="main">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
