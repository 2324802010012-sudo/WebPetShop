@model WebPetShop.Models.DonHang
@{
    ViewData["Title"] = "Chi tiết đơn giao hàng";
    Layout = "~/Views/Shared/_LayoutGiaoHang.cshtml";
}

<div class="container py-4">

    <h3 class="fw-bold text-danger mb-4">
        <i class="fa-solid fa-file-invoice me-2"></i> Chi tiết đơn hàng #@Model.MaDh
    </h3>

    <!-- 🟦 THÔNG TIN KHÁCH HÀNG -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <h5 class="fw-bold text-danger mb-3">📍 Thông tin giao hàng</h5>

            <p><b>Khách hàng:</b> @Model.MaNguoiDungNavigation?.HoTen</p>
            <p><b>Địa chỉ:</b> @Model.DiaChiGiao</p>
            <p>
                <b>Ngày đặt:</b>
                @Model.NgayDat?.ToString("dd/MM/yyyy HH:mm")
            </p>
            <p>
                <b>Trạng thái hiện tại:</b>
                <span class="badge bg-primary px-3 py-2">@Model.TrangThai</span>
            </p>
        </div>
    </div>

    <!-- 🟦 TIMELINE TRẠNG THÁI -->
    <partial name="~/Views/Shared/Timeline_TrangThai.cshtml" model="Model" />

    <!-- 🟦 DANH SÁCH SẢN PHẨM -->
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-danger text-white fw-bold">
            Danh sách sản phẩm
        </div>

        <div class="card-body p-0">
            <table class="table table-borderless align-middle mb-0">
                <tbody>
                    @foreach (var ct in Model.ChiTietDonHangs)
                    {
                        <tr>
                            <td width="90">
                                <img src="~/ImagesWWeb/@ct.MaSpNavigation.HinhAnh"
                                     class="rounded" width="75" height="75"
                                     style="object-fit:cover;">
                            </td>
                            <td>
                                <div class="fw-semibold">@ct.MaSpNavigation.TenSp</div>
                                <div class="text-muted small">SL: @ct.SoLuong</div>
                            </td>
                            <td class="fw-bold text-danger text-end pe-4">
                                @((ct.SoLuong * ct.DonGia).ToString("N0")) ₫
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer text-end bg-light fw-bold fs-5">
            Tổng: <span class="text-danger">
                @Model.ChiTietDonHangs.Sum(x => x.SoLuong * x.DonGia).ToString("N0") ₫
            </span>
        </div>
    </div>

    <!-- 🟦 NÚT CẬP NHẬT -->
    <div class="text-end mt-4">
        <a href="/GiaoHang/CapNhatTrangThai/@Model.MaDh"
           class="btn btn-danger px-4 py-2 rounded-pill fw-semibold">
            <i class="fa-solid fa-pen-to-square me-1"></i> Cập nhật trạng thái
        </a>
    </div>

</div>
