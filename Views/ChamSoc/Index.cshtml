@model IEnumerable<WebPetShop.Models.KyGuiThuCung>
@{
    ViewData["Title"] = "Danh sách ký gửi";
}

<div class="container py-4">
    <h2 class="fw-bold text-danger mb-4">
        <i class="fa-solid fa-paw me-2"></i> Thú cưng đang ký gửi
    </h2>

    <table class="table table-bordered table-hover shadow-sm bg-white">
        <thead class="table-danger">
            <tr>
                <th>Khách hàng</th>
                <th>Tên thú cưng</th>
                <th>Giống</th>
                <th>Tình trạng</th>
                <th>Ngày gửi</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaKhNavigation?.HoTen</td>
                    <td>@item.TenThuCung</td>
                    <td>@item.GiongLoai</td>
                    <td><span class="badge bg-success">@item.TrangThai</span></td>
                    <td>@item.NgayGui?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="/ChamSoc/ChiTiet/@item.MaKyGui" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-eye"></i> Xem
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
