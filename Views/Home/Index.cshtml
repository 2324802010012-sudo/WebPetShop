<style>
    /* ===============================
           🖼️ 1. PHẦN ẢNH BANNER CHÍNH
           =============================== */
    .banner-slide {
        height: 500px;
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        filter: brightness(0.93);
        transition: transform 2.0s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Hiệu ứng zoom nhẹ khi đang active */
    .carousel-item.active .banner-slide {
        transform: scale(1.05);
    }

    /* Giữ khoảng trống cho navbar */
    body {
        padding-top: 110px; /* Điều chỉnh theo chiều cao menu */
    }

    /* ===============================
           🎯 2. CHỮ TRÊN BANNER
           =============================== */
    .banner-caption {
        background: rgba(0, 0, 0, 0.45);
        border-radius: 14px;
        padding: 20px 25px;
        max-width: 600px;
        margin: auto;
        animation: fadeInUp 1s ease forwards;
        opacity: 0;
    }

    /* Khi slide active thì chữ hiện ra */
    .carousel-item.active .banner-caption {
        opacity: 1;
    }

    .banner-caption h2 {
        color: #fff;
        font-weight: 700;
        text-shadow: 0 3px 10px rgba(0, 0, 0, 0.7);
    }

    .banner-caption p {
        color: #FFD700;
        font-weight: 500;
    }

    /* Hiệu ứng chữ bay lên nhẹ */
    @@keyframes fadeInUp {
        from

    {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    /* ===============================
           ⚪ 3. CHẤM DOT INDICATORS
           =============================== */
    /* ⚪ DOT INDICATORS NÂNG CẤP */
    .carousel-indicators {
        bottom: 15px; /* dịch lên khỏi mép dưới 1 chút */
        gap: 8px;
    }

        .carousel-indicators [data-bs-target] {
            background-color: rgba(255, 215, 0, 0.8); /* vàng trong suốt */
            width: 12px;
            height: 12px;
            border-radius: 50%;
            opacity: 0.6;
            border: 2px solid #fff;
            transition: all 0.3s ease;
        }

            .carousel-indicators [data-bs-target]:hover {
                transform: scale(1.3);
                opacity: 1;
                background-color: #FFD700;
            }

        .carousel-indicators .active {
            background-color: #fff;
            opacity: 1;
            transform: scale(1.2);
        }


    /* ===============================
           🟡 4. THANH TIẾN TRÌNH DƯỚI BANNER
           =============================== */
    .carousel-progress {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0%;
        height: 4px;
        background-color: #FFD700;
        animation: progressBar 4s linear infinite;
    }

    @@keyframes progressBar {
        from

    {
        width: 0%;
    }

    to {
        width: 100%;
    }

    }

    /* ===============================
           📱 5. RESPONSIVE CHO MOBILE
           =============================== */
    @@media (max-width: 768px) {
        .banner-slide

    {
        height: 260px;
    }

    .banner-caption {
        padding: 12px 18px;
    }

        .banner-caption h2 {
            font-size: 18px;
        }

        .banner-caption p {
            font-size: 14px;
        }

    }
</style>



