@model WebPetShop.ViewModels.CheckoutVM

@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-credit-card me-2"></i>Thanh toán đơn hàng
    </h2>

    <form method="post" asp-action="Checkout">
        <div class="row">

            <!-- Thông tin nhận hàng -->
            <div class="col-md-7">
                <div class="card shadow-sm p-3">
                    <h5 class="fw-bold text-secondary mb-3">Thông tin nhận hàng</h5>

                    <div class="mb-3">
                        <label>Họ tên người nhận</label>
                        <input class="form-control" asp-for="HoTenNhan" required />
                    </div>

                    <div class="mb-3">
                        <label>Số điện thoại</label>
                        <input class="form-control" asp-for="SDTNhan" required />
                    </div>

                    <div class="mb-3">
                        <label>Địa chỉ giao hàng</label>
                        <textarea class="form-control" rows="3" asp-for="DiaChiGiao" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label>Phương thức thanh toán</label>
                        <select class="form-select" asp-for="PhuongThuc">
                            <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                            <option value="Online">Thanh toán Online</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Thanh toán -->
            <div class="col-md-5">
                <div class="card shadow-sm p-3">
                    <h5 class="fw-bold text-secondary">Chi phí thanh toán</h5>

                    <div class="d-flex justify-content-between mt-3">
                        <span>Tiền hàng</span>
                        <span class="fw-bold">@Model.TienHang.ToString("N0") đ</span>
                    </div>

                    <div class="mt-3">
                        <label>Phí giao hàng:</label>
                        <select class="form-select"
                                asp-for="MaPhi"
                                asp-items="@(new SelectList(Model.PhiGiaoHangList, "MaPhi", "KhuVuc"))"
                                required>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <small>Giảm giá</small>
                        <small class="text-success fw-bold">- @Model.GiamGia.ToString("N0") đ</small>
                    </div>

                    <hr />
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold fs-5">Tổng thanh toán</span>
                        <span class="fw-bold text-danger fs-4">
                            @Model.TongTien.ToString("N0") đ
                        </span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-4 py-2 fw-bold">
                        <i class="fa-solid fa-check me-2"></i> Xác nhận đặt hàng
                    </button>

                    <a href="/GioHang" class="btn btn-secondary w-100 mt-2">
                        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại giỏ hàng
                    </a>
                </div>
            </div>

        </div>
    </form>
</div>
