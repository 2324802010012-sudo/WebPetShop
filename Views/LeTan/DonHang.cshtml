@model IEnumerable<WebPetShop.Models.DonHang>
@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/_LayoutLeTan.cshtml";
}

<!-- Form ẩn để sinh AntiForgeryToken cho AJAX -->
<form id="tokenForm">
    @Html.AntiForgeryToken()
</form>

<div class="container-fluid py-4">
    <h3 class="fw-bold text-danger mb-4">
        <i class="fa-solid fa-box-open me-2"></i> Quản lý đơn hàng
    </h3>

    <table class="table align-middle table-hover bg-white shadow-sm rounded">
        <thead class="bg-danger text-white">
            <tr>
                <th>Mã đơn</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row-@item.MaDh">
                    <td class="fw-bold text-secondary">#@item.MaDh</td>
                    <td>@item.MaNguoiDungNavigation?.HoTen</td>
                    <td>@item.NgayDat?.ToString("dd/MM/yyyy HH:mm")</td>

                    <td class="trangthai">
                        @if (item.TrangThai == "Chờ xác nhận")
                        {
                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                        }
                        else if (item.TrangThai == "Đã xác nhận")
                        {
                            <span class="badge bg-success">Đã xác nhận</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.TrangThai</span>
                        }
                    </td>

                    <td class="text-center">
                        <a href="/LeTan/ChiTietDon/@item.MaDh" class="btn btn-sm btn-outline-primary me-1">
                            <i class="fa-solid fa-eye"></i>
                        </a>

                        @if (item.TrangThai == "Chờ xác nhận")
                        {
                            <button class="btn btn-sm btn-success btn-xacnhan"
                                    data-id="@item.MaDh">
                                <i class="fa-solid fa-check"></i> Xác nhận
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script>
        $(document).on("click", ".btn-xacnhan", function (e) {
            e.preventDefault();

            let id = $(this).data("id");
            let button = $(this);

            $.ajax({
                url: '/LeTan/XacNhanDon',
                type: 'POST',
                data: {
                    id: id,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (res) {
                    if (res.success) {

                        // cập nhật trạng thái ngay lập tức
                        $("#row-" + id).find(".trangthai")
                            .html('<span class="badge bg-success">Đã xác nhận</span>');

                        // xóa nút xác nhận
                        button.remove();
                    }
                    else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert("Có lỗi xảy ra! Không thể cập nhật đơn hàng.");
                }
            });
        });
    </script>
}
