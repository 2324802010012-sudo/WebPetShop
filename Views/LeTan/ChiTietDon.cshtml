@model WebPetShop.Models.DonHang
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.MaDh;
    Layout = "~/Views/Shared/_LayoutLeTan.cshtml";
}

<div class="container py-4">
    <h3 class="fw-bold text-danger mb-4">
        <i class="fa-solid fa-box me-2"></i> Chi tiết đơn hàng #@Model.MaDh
    </h3>
    <partial name="~/Views/Shared/Timeline_TrangThai.cshtml" model="Model" />

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-danger text-white fw-semibold">
            <i class="fa-solid fa-user me-2"></i>Thông tin khách hàng
        </div>
        <div class="card-body">
            <p><strong>Khách hàng:</strong> @Model.MaNguoiDungNavigation?.HoTen</p>
            <p><strong>Điện thoại:</strong> @Model.SoDienThoai</p>
            <p><strong>Địa chỉ:</strong> @Model.DiaChiGiao</p>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white fw-semibold">
            <i class="fa-solid fa-list me-2"></i>Chi tiết sản phẩm
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sp in Model.ChiTietDonHangs)
                    {
                        <tr>
                            <td>@sp.MaSpNavigation?.TenSp</td>
                            <td>@sp.SoLuong</td>
                            <td>
                                @sp.DonGia.ToString("N0") đ
                            </td>
                            <td class="text-end text-danger fw-bold">
                                @((sp.SoLuong * sp.DonGia).ToString("N0")) đ

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            <strong>Trạng thái hiện tại:</strong>
            <span class="badge bg-info">@Model.TrangThai</span>
        </div>

        <div>
            @if (Model.TrangThai == "Chờ xác nhận")

            {
                <form asp-controller="LeTan" asp-action="XacNhanDon" asp-route-id="@Model.MaDh" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-check me-1"></i> Xác nhận đơn hàng
                    </button>
                </form>

            }

            <a href="/LeTan/DonHang" class="btn btn-outline-danger">
                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </div>
</div>