@{
    ViewData["Title"] = "Đăng ký";
}

<div class="register-wrapper d-flex justify-content-center align-items-center">
    <div class="register-card p-5 shadow-lg rounded-4">

        <!-- Logo -->
        <div class="text-center mb-4">
            <div class="paw-icon mb-3">
                <i class="fa-solid fa-paw"></i>
            </div>
            <h3 class="fw-bold text-danger">Tạo tài khoản mới</h3>
            <p class="text-muted small">Gia nhập cộng đồng yêu thú cưng của PetShop ❤️</p>
        </div>


        <form asp-action="Register" asp-controller="Auth" method="post">

            <!-- Họ tên -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Họ và tên</label>
                <div class="input-group stylish-input">
                    <span class="input-group-text text-danger">
                        <i class="fa fa-user"></i>
                    </span>
                    <input type="text" name="HoTen" class="form-control" placeholder="Ví dụ: Nguyễn Văn A" required>
                </div>
            </div>

            <!-- Tên đăng nhập -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Tên đăng nhập</label>
                <div class="input-group stylish-input">
                    <span class="input-group-text text-danger">
                        <i class="fa fa-id-card"></i>
                    </span>
                    <input type="text" name="TenDangNhap" class="form-control" placeholder="Tên đăng nhập..." required>
                </div>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <div class="input-group stylish-input">
                    <span class="input-group-text text-danger">
                        <i class="fa fa-envelope"></i>
                    </span>
                    <input type="email" name="Email" class="form-control" placeholder="example@gmail.com" required>
                </div>
            </div>

            <!-- Mật khẩu -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <div class="input-group stylish-input">
                    <span class="input-group-text text-danger">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password" name="MatKhau" class="form-control" placeholder="••••••••" required>
                </div>
            </div>

            <!-- Error -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center mt-2">
                    <i class="fa fa-triangle-exclamation me-2"></i>@TempData["Error"]
                </div>
            }

            <button type="submit" class="btn btn-register w-100 mt-3 fw-bold">
                <i class="fa fa-user-plus me-1"></i> Đăng ký ngay
            </button>

            <div class="text-center mt-4">
                <a href="/Auth/Login" class="text-decoration-none fw-semibold text-danger link-login">
                    🔑 Đã có tài khoản? Đăng nhập
                </a>
            </div>

        </form>

    </div>
</div>

<style>
    /* BACKGROUND */
    body {
        background: linear-gradient(to bottom right, #ffecec, #fff7f7);
    }

    .register-wrapper {
        min-height: 100vh;
    }

    /* CARD */
    .register-card {
        width: 480px;
        background: #ffffffee;
        border: 1px solid #fff3f3;
        backdrop-filter: blur(12px);
        animation: fadeIn 0.5s ease;
    }

    .zoom-logo {
        transition: .3s;
    }

        .zoom-logo:hover {
            transform: scale(1.1);
        }

    /* INPUT */
    .stylish-input .input-group-text {
        background: #fff2f2;
        border: none;
        border-right: 1px solid #ffd3d3;
        font-size: 18px;
    }

    .stylish-input input {
        border-radius: 10px;
        border: 1px solid #ffd3d3;
        transition: .25s;
    }

        .stylish-input input:focus {
            border-color: #ff6b6b;
            box-shadow: 0 0 6px rgba(255, 107, 107, .4);
        }

    /* BUTTON GRADIENT PETSHOP */
    .btn-register {
        background: linear-gradient(135deg, #ff6b6b, #ff4d4d);
        color: white;
        border-radius: 12px;
        padding: 12px;
        transition: .25s;
        font-size: 17px;
    }

        .btn-register:hover {
            background: linear-gradient(135deg, #ff4d4d, #ff2f2f);
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(255, 77, 77, .4);
        }

    .link-login:hover {
        text-decoration: underline;
    }

    .paw-icon {
        font-size: 60px;
        color: #ff4d4d;
        background: #ffecec;
        width: 90px;
        height: 90px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        margin: 0 auto;
        box-shadow: 0 4px 12px rgba(255, 77, 77, 0.3);
        transition: 0.3s;
    }

        .paw-icon:hover {
            transform: scale(1.1);
            background: #ffdfdf;
            box-shadow: 0 6px 16px rgba(255, 77, 77, 0.4);
        }


    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
