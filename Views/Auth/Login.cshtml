@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-page d-flex justify-content-center align-items-center">
    <div class="login-card shadow-lg p-5 bg-white rounded-4" style="width: 450px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-danger">
                🐾 Đăng nhập PetShop
            </h3>
            <p class="text-muted small">Chào mừng bạn quay lại thế giới thú cưng 💖</p>
        </div>

        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Tên đăng nhập</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fa fa-user text-danger"></i></span>
                    <input type="text" name="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập..." required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fa fa-lock text-danger"></i></span>
                    <input type="password" name="MatKhau" class="form-control" placeholder="••••••" required />
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center"><i class="fa fa-triangle-exclamation me-2"></i>@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center"><i class="fa fa-check-circle me-2"></i>@TempData["Success"]</div>
            }

            <button type="submit" class="btn btn-danger w-100 fw-bold rounded-pill py-2 mt-3">
                <i class="fa fa-sign-in-alt me-1"></i> Đăng nhập
            </button>

            <div class="text-center mt-4">
                <a href="/Auth/Register" class="text-decoration-none fw-semibold text-primary">
                    👉 Chưa có tài khoản? Đăng ký ngay
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #ffe5e5, #fff8f8);
    }

    .login-card {
        animation: slideIn 0.6s ease;
    }
    @@keyframes slideIn {
        from

    {
        transform: translateY(-40px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .input-group-text {
        border-right: none;
    }

    .form-control {
        border-left: none;
    }
</style>
