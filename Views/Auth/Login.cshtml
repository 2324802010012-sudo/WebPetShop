@{
    ViewData["Title"] = "Đăng nhập - PetShop";
}

<div class="login-wrapper d-flex justify-content-center align-items-center">
    <div class="login-card shadow-lg bg-white rounded-4 p-5">
        <!-- 🐾 Tiêu đề -->
        <div class="text-center mb-4">
          
            <h3 class="fw-bold text-danger mb-1">Đăng nhập PetShop</h3>
            <p class="text-muted small mb-0">Chào mừng bạn quay lại thế giới thú cưng 🐶🐱</p>
        </div>

        <!-- 🧾 Form đăng nhập -->
        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold text-dark">Tên đăng nhập</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light"><i class="fa-solid fa-user text-danger"></i></span>
                    <input type="text" name="TenDangNhap" class="form-control border-start-0" placeholder="Nhập tên đăng nhập..." required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold text-dark">Mật khẩu</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light"><i class="fa-solid fa-lock text-danger"></i></span>
                    <input type="password" name="MatKhau" class="form-control border-start-0" placeholder="••••••••" required />
                </div>
            </div>

            <!-- ⚠️ Thông báo -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center mt-3 rounded-pill shadow-sm">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i>@TempData["Error"]
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center mt-3 rounded-pill shadow-sm">
                    <i class="fa-solid fa-circle-check me-2"></i>@TempData["Success"]
                </div>
            }

            <!-- 🔘 Nút đăng nhập -->
            <button type="submit" class="btn btn-danger w-100 rounded-pill py-3 fw-bold mt-3 hover-glow">
                <i class="fa-solid fa-right-to-bracket me-2"></i> Đăng nhập
            </button>

            <!-- 🔗 Liên kết phụ -->
            <div class="text-center mt-4 small">
                <a href="#" class="text-decoration-none text-secondary">Quên mật khẩu?</a>
            </div>
            <div class="text-center mt-2 small">
                🐾 <a href="/Auth/Register" class="text-decoration-none fw-semibold text-primary">Chưa có tài khoản? Đăng ký ngay</a>
            </div>
        </form>

        <!-- 🦴 Footer -->
        <div class="text-center mt-4 text-muted small">
            <i class="fa-solid fa-shield-dog text-danger me-1"></i> Bảo mật tuyệt đối - Mua sắm an toàn cùng PetShop
        </div>
    </div>
</div>
<style>
    /* 🌄 HIỂN THỊ HÌNH NỀN RÕ */
    body {
        background: url('/ImagesWWeb/bannerlogin.jpg') center/cover no-repeat fixed;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    .login-container {
        min-height: 100vh;
        background-color: rgba(255, 255, 255, 0.25); /* giữ ánh sáng nhẹ để text không chói */
    }

    /* 🧱 KHUNG FORM */
    .login-card {
        width: 420px;
        border: none;
        backdrop-filter: none;
        animation: fadeUp 0.8s ease;
    }

    .input-group-text {
        border-right: none;
        border-radius: 12px 0 0 12px;
    }

    .form-control {
        border-left: none;
        border-radius: 0 12px 12px 0;
        box-shadow: none !important;
    }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 6px rgba(220, 53, 69, 0.4);
        }

    /* 🔘 NÚT */
    .hover-glow {
        transition: all 0.3s ease;
        box-shadow: 0 3px 8px rgba(220, 53, 69, 0.3);
    }

        .hover-glow:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(220, 53, 69, 0.5);
            background-color: #c9302c;
        }

    /* ✨ HIỆU ỨNG */
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>