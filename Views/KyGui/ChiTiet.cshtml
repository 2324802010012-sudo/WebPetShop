@model KyGuiThuCung

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 950px; margin: 0 auto;">
        <!-- Header đỏ đẹp -->
        <div class="card-header bg-gradient bg-danger text-white text-center py-5 rounded-top-4">
            <h1 class="mb-3">
                <i class="fas fa-paw fa-beat me-3"></i>
                CHI TIẾT KÝ GỬI
            </h1>
            <h3 class="mb-0">Boss: <strong class="text-warning">@Model.TenThuCung</strong></h3>
        </div>

        <div class="card-body p-5">
            <!-- Thông tin chính -->
            <div class="row g-5 mb-5">
                <div class="col-lg-6">
                    <div class="bg-light p-4 rounded-3 border-start border-danger border-5">
                        <p class="mb-3"><i class="fas fa-dog text-danger me-3"></i><strong>Giống loài:</strong> @Model.GiongLoai</p>
                        <p class="mb-3"><i class="fas fa-birthday-cake text-danger me-3"></i><strong>Tuổi:</strong> @(Model.Tuoi ?? 0) tuổi</p>
                        <p class="mb-3"><i class="fas fa-calendar-day text-danger me-3"></i><strong>Ngày gửi:</strong> @Model.NgayGui?.ToString("dd/MM/yyyy")</p>
                        <p class="mb-3"><i class="fas fa-calendar-check text-danger me-3"></i><strong>Dự kiến nhận lại:</strong> @Model.NgayHetHan?.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="bg-light p-4 rounded-3 border-start border-success border-5">
                        <p class="mb-3"><i class="fas fa-user text-success me-3"></i><strong>Chủ nhân:</strong> @Model.MaKhNavigation.HoTen</p>
                        <p class="mb-3"><i class="fas fa-phone text-success me-3"></i><strong>SĐT:</strong> @Model.MaKhNavigation.SoDienThoai</p>
                        <p class="mb-3">
                            <i class="fas fa-heart-pulse text-success me-3"></i><strong>Trạng thái:</strong>
                            <span class="badge bg-warning fs-6">@Model.TrangThai</span>
                        </p>
                        <p class="mb-0 fs-4">
                            <i class="fas fa-money-bill-wave text-danger me-3"></i>
                            <strong>Phí ký gửi:</strong>
                            <span class="text-danger fw-bold">@((Model.PhiKyGui ?? 0).ToString("N0")) ₫</span>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Ghi chú của chủ -->
            @if (!string.IsNullOrEmpty(Model.GhiChu))
            {
                <div class="alert alert-info rounded-3 p-4 border-start border-primary border-5">
                    <h5><i class="fas fa-sticky-note me-2"></i> Ghi chú từ chủ nhân:</h5>
                    <p class="mb-0 fs-5">@Model.GhiChu</p>
                </div>
            }

            <hr class="my-5 border-danger border-2">

            <!-- Nhật ký chăm sóc -->
            <h3 class="text-center text-primary mb-4">
                <i class="fas fa-book-heart me-3"></i> NHẬT KÝ CHĂM SÓC
            </h3>

            @if (!Model.ChiTietChamSocs.Any())
            {
                <div class="text-center py-5 bg-light rounded-4">
                    <i class="fas fa-heart-crack fa-4x text-muted mb-4"></i>
                    <p class="text-muted fs-4">Chưa có nhật ký chăm sóc nào ~ Boss đang được yêu thương từng ngày!</p>
                </div>
            }
            else
            {
                <div class="timeline">
                    @foreach (var log in Model.ChiTietChamSocs.OrderByDescending(x => x.NgayCapNhat))
                    {
                        <div class="card mb-3 border-start border-danger border-5 shadow-sm hover-shadow">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-danger fw-bold">
                                        <i class="fas fa-calendar-day me-2"></i>
                                        @log.NgayCapNhat?.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <p class="mb-0 fs-5">@log.GhiChu</p>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Nút hành động -->
            <div class="text-center mt-5">
                <a asp-action="NhatKy" asp-route-id="@Model.MaKyGui" class="btn btn-success btn-lg rounded-pill px-5 shadow">
                    <i class="fas fa-plus me-2"></i> Thêm nhật ký chăm sóc
                </a>
                <a asp-action="DanhSach" class="btn btn-outline-secondary btn-lg rounded-pill px-5 ms-3">
                    <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
                </a>
            </div>
        </div>

        <div class="card-footer text-center py-4 bg-light text-muted small">
            Mã ký gửi: #@Model.MaKyGui | Cập nhật lần cuối: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 10px 20px rgba(220, 53, 69, 0.2) !important;
        transition: all 0.3s;
    }
</style>