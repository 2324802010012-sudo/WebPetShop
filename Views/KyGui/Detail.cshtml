@model KyGuiThuCung

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h3>CHI TIẾT KÝ GỬI - @Model.TenThuCung</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Chủ:</strong> @Model.MaKhNavigation?.HoTen</p>
                    <p><strong>Ngày gửi:</strong> @Model.NgayGui?.ToString("dd/MM/yyyy")</p>
                    <p><strong>Trạng thái:</strong> <span class="badge bg-warning">@Model.TrangThai</span></p>
                </div>
                <div class="col-md-6">
                    <p><strong>Phí:</strong> <span class="text-danger fw-bold">@Model.PhiKyGui?.ToString("N0") ₫</span></p>
                </div>
            </div>

            <hr />

            <h5>NHẬT KÝ CHĂM SÓC</h5>
            @if (!Model.ChiTietChamSocs.Any())
            {
                <p class="text-muted">Chưa có nhật ký nào.</p>
            }
            else
            {
                foreach (var log in Model.ChiTietChamSocs.OrderByDescending(x => x.NgayCapNhat))
                {
                    <div class="border-start border-danger border-5 ps-3 mb-3">
                        <small class="text-danger">@log.NgayCapNhat?.ToString("dd/MM/yyyy HH:mm")</small>
                        <p class="mb-0">@log.GhiChu</p>
                    </div>
                }
            }

            <div class="text-center mt-4">
                <a asp-action="ThemNhatKy" asp-route-id="@Model.MaKyGui" class="btn btn-success btn-lg">
                    Thêm nhật ký
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>