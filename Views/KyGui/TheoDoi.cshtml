@model WebPetShop.Models.KyGuiThuCung

@{
    ViewData["Title"] = "Theo dõi - " + Model.TenThuCung;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="container py-5">
    <!-- Card thông tin boss -->
    <div class="card shadow-lg border-0 rounded-4 mb-5">
        <div class="card-header bg-danger text-white text-center py-4">
            <h3 class="mb-0">
                THEO DÕI BOSS: <strong>@Model.TenThuCung</strong>
            </h3>
            <span class="badge bg-light text-dark fs-5">@Model.TrangThai</span>
        </div>
        <div class="card-body bg-light">
            <div class="row text-start">
                <div class="col-md-6">
                    <p><strong>Giống loài:</strong> @Model.GiongLoai</p>
                    <p><strong>Tuổi:</strong> @(Model.Tuoi ?? 0) tháng</p>
                    <p><strong>Ngày gửi:</strong> @Model.NgayGui?.ToString("dd/MM/yyyy")</p>
                    <p><strong>Dự kiến nhận lại:</strong> @Model.NgayHetHan?.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Chủ nhân:</strong> @Model.MaKhNavigation?.HoTen</p>
                    <p><strong>SĐT:</strong> @Model.MaKhNavigation?.SoDienThoai</p>
                    @if (!string.IsNullOrEmpty(Model.GhiChu))
                    {
                        <div class="alert alert-info mt-3">
                            <strong>Ghi chú từ chủ:</strong><br />
                            @Model.GhiChu
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Form thêm nhật ký -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="text-success mb-3">Thêm nhật ký chăm sóc hôm nay</h4>
            <form asp-action="ThemNhatKy" method="post">
                <input type="hidden" name="MaKyGui" value="@Model.MaKyGui" />
                <div class="input-group">
                    <textarea name="GhiChu" class="form-control" rows="3"
                              placeholder="Hôm nay boss ăn ngon, tắm sạch, chơi vui lắm luôn..." required></textarea>
                    <button type="submit" class="btn btn-success btn-lg px-4">
                        Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách nhật ký -->
    <h4 class="text-primary mb-4">NHẬT KÝ CHĂM SÓC</h4>

    @if (Model.ChiTietChamSocs == null || !Model.ChiTietChamSocs.Any())
    {
        <div class="text-center py-5 bg-light rounded-4">
            <i class="fas fa-heart fa-4x text-muted mb-3"></i>
            <p class="text-muted fs-5">Chưa có nhật ký chăm sóc nào ~ Boss đang được yêu thương từng ngày!</p>
        </div>
    }
    else
    {
        <div class="timeline">
            @foreach (var log in Model.ChiTietChamSocs.OrderByDescending(x => x.NgayCapNhat))
            {
                <div class="card mb-3 border-start border-success border-5 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-success fw-bold">
                                @log.NgayCapNhat?.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                        <p class="mb-0 fs-5">@log.GhiChu</p>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-5">
        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-5">
            Quay lại danh sách
        </a>
    </div>
</div>