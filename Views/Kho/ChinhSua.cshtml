@model WebPetShop.Models.SanPham
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Kho/_LayoutKho.cshtml";
}

<div class="container py-4">
    <h3 class="fw-bold text-danger mb-4">
        <i class="fa-solid fa-pen-to-square me-2"></i> Chỉnh sửa sản phẩm
    </h3>

    <form asp-action="ChinhSua" asp-controller="Kho" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm border-0">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MaSp" />

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold">Tên sản phẩm</label>
                <input asp-for="TenSp" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Giá bán</label>
                <input asp-for="Gia" class="form-control" type="number" step="1000" min="0" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Danh mục</label>
                <select asp-for="MaDanhMuc" class="form-select"
                        asp-items="@(new SelectList(ViewBag.DanhMucs, "MaDanhMuc", "TenDanhMuc"))"></select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Số lượng tồn</label>
                <input asp-for="SoLuongTon" class="form-control" type="number" min="0" />
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="HangHoa" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-danger px-4 fw-semibold">
                <i class="fa-solid fa-save"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>
