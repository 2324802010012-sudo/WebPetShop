@model IEnumerable<WebPetShop.Models.SanPham>
@{
    ViewData["Title"] = "Quản lý hàng hóa";
    Layout = "~/Views/Kho/_LayoutKho.cshtml";
}

<div class="container-fluid py-4">

    <!-- =======================
        THỐNG KÊ NHANH
     ======================= -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card bg-danger">
                <div>
                    <p>Tổng sản phẩm</p>
                    <h3>@Model.Count()</h3>
                </div>
                <i class="fa-solid fa-box-open"></i>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card bg-warning">
                <div>
                    <p>Sắp hết hàng (≤ 5)</p>
                    <h3>@Model.Count(x => x.SoLuongTon <= 5)</h3>
                </div>
                <i class="fa-solid fa-triangle-exclamation"></i>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card bg-success">
                <div>
                    <p>Đang bán</p>
                    <h3>@Model.Count()</h3>
                </div>
                <i class="fa-solid fa-tags"></i>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card bg-info">
                <div>
                    <p>Tổng tồn kho</p>
                    <h3>@Model.Sum(x => x.SoLuongTon)</h3>
                </div>
                <i class="fa-solid fa-warehouse"></i>
            </div>
        </div>
    </div>


    <!-- =======================
        TITLE + ACTIONS
     ======================= -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-danger mb-0">
            <i class="fa-solid fa-boxes-stacked me-2"></i> Quản lý hàng hóa
        </h3>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="ThemSanPham" class="btn btn-danger fw-semibold shadow-sm">
                <i class="fa-solid fa-square-plus me-1"></i> Thêm sản phẩm
            </a>

            <button id="toggleView" class="btn btn-outline-danger fw-semibold shadow-sm">
                <i class="fa-solid fa-table-cells-large me-1"></i> Chuyển chế độ xem
            </button>

            <div class="input-group search-box shadow-sm">
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm sản phẩm..." />
                <button class="btn btn-outline-danger" id="btnSearch">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </div>
    </div>


    <!-- =======================
        BỘ LỌC
     ======================= -->
    <div class="filter-box mb-3">
        <select id="filterDanhMuc" class="form-select">
            <option value="">Tất cả danh mục</option>
            @foreach (var dm in ViewBag.DanhMucs)
            {
                <option value="@dm.TenDanhMuc">@dm.TenDanhMuc</option>
            }
        </select>

        <select id="filterGia" class="form-select">
            <option value="">Tất cả giá</option>
            <option value="1">Dưới 100.000₫</option>
            <option value="2">100.000 – 500.000₫</option>
            <option value="3">Trên 500.000₫</option>
        </select>

        <select id="filterTon" class="form-select">
            <option value="">Tồn kho</option>
            <option value="1">Dưới 5</option>
            <option value="2">5 – 20</option>
            <option value="3">Trên 20</option>
        </select>
    </div>


    <!-- =======================
        TABLE VIEW
     ======================= -->
    <div id="tableView" class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table align-middle table-hover mb-0">
                <thead class="table-header">
                    <tr>
                        <th>#</th>
                        <th>Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Giá bán</th>
                        <th>Tồn kho</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @if (Model.Any())
                    {
                        int i = 1;
                        foreach (var sp in Model)
                        {
                            <tr class="text-center">
                                <td>@i</td>
                                <td>
                                    <img src="~/ImagesWWeb/@sp.HinhAnh"
                                         width="60" height="60"
                                         class="rounded border shadow-sm product-thumb"
                                         onerror="this.src='/ImagesWWeb/no-image.png';"
                                         data-bs-toggle="modal"
                                         data-bs-target="#productModal"
                                         data-name="@sp.TenSp"
                                         data-category="@sp.MaDanhMucNavigation?.TenDanhMuc"
                                         data-price="@sp.Gia.ToString("N0") ₫"
                                         data-desc="@sp.MoTa" />
                                </td>

                                <td class="text-start fw-semibold">@sp.TenSp</td>
                                <td>@sp.MaDanhMucNavigation?.TenDanhMuc</td>

                                <td class="text-danger fw-bold">@sp.Gia.ToString("N0") ₫</td>

                                <td>
                                    <span class="badge stock-badge @(sp.SoLuongTon <= 3 ? "bg-danger" : sp.SoLuongTon <= 10 ? "bg-warning text-dark" : "bg-success")">
                                        @sp.SoLuongTon
                                    </span>
                                </td>

                                <td><span class="badge bg-info text-dark">Đang bán</span></td>

                                <td>
                                    <a asp-action="ChinhSua" asp-route-id="@sp.MaSp"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <a asp-action="Xoa" asp-route-id="@sp.MaSp"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Bạn chắc chắn muốn xóa sản phẩm này?');">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                Không có sản phẩm nào trong kho.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <!-- =======================
        GRID VIEW
     ======================= -->
    <div id="gridView" class="row g-3 d-none mt-2">
        @foreach (var sp in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product-card shadow-sm">
                    <img src="~/ImagesWWeb/@sp.HinhAnh"
                         onerror="this.src='/ImagesWWeb/no-image.png';"
                         data-bs-toggle="modal"
                         data-bs-target="#productModal"
                         data-name="@sp.TenSp"
                         data-category="@sp.MaDanhMucNavigation?.TenDanhMuc"
                         data-price="@sp.Gia.ToString("N0") ₫"
                         data-desc="@sp.MoTa" />

                    <div class="text-section">
                        <h6>@sp.TenSp</h6>
                        <p class="price">@sp.Gia.ToString("N0") ₫</p>
                        <span class="badge bg-light text-dark">Tồn: @sp.SoLuongTon</span>
                        <p class="category">@sp.MaDanhMucNavigation?.TenDanhMuc</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!-- =======================
    MODAL CHI TIẾT
 ======================= -->
<div class="modal fade" id="productModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Chi tiết sản phẩm</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body d-flex flex-wrap gap-4 align-items-center">
                <img id="modalImage" width="250" class="rounded shadow-sm border">
                <div>
                    <h5 id="modalName" class="fw-bold text-danger"></h5>
                    <p id="modalCategory" class="text-muted"></p>
                    <p id="modalPrice" class="fw-bold fs-5"></p>
                    <p id="modalDesc" class="small text-secondary"></p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- =======================
    SCRIPT
 ======================= -->
@section Scripts {
    <script>
        // Chuyển chế độ xem Table <-> Grid
        document.getElementById('toggleView').onclick = function () {
            document.getElementById('tableView').classList.toggle('d-none');
            document.getElementById('gridView').classList.toggle('d-none');
        };

        // Tìm kiếm sản phẩm
        document.getElementById('btnSearch').onclick = function () {
            const keyword = document.getElementById('searchInput').value.toLowerCase();

            document.querySelectorAll('#tableBody tr').forEach(r => {
                const name = r.querySelector('td:nth-child(3)')?.textContent.toLowerCase();
                r.style.display = name.includes(keyword) ? "" : "none";
            });
        };

        // Modal chi tiết sản phẩm
        const modal = document.getElementById('productModal');
        modal.addEventListener('show.bs.modal', e => {
            const img = e.relatedTarget;
            document.getElementById('modalImage').src = img.src;
            document.getElementById('modalName').innerText = img.dataset.name;
            document.getElementById('modalCategory').innerText = img.dataset.category;
            document.getElementById('modalPrice').innerText = img.dataset.price;
            document.getElementById('modalDesc').innerText = img.dataset.desc || "Không có mô tả.";
        });
    </script>
    <script>
        function applyFilters() {
            const danhMuc = document.getElementById("filterDanhMuc").value.toLowerCase();
            const gia = document.getElementById("filterGia").value;
            const ton = document.getElementById("filterTon").value;
            const keyword = document.getElementById("searchInput").value.toLowerCase();

            document.querySelectorAll("#tableBody tr").forEach(row => {

                const name = row.querySelector("td:nth-child(3)")?.textContent.toLowerCase() || "";
                const category = row.querySelector("td:nth-child(4)")?.textContent.toLowerCase() || "";
                const priceText = row.querySelector("td:nth-child(5)")?.textContent.replace(/[.,₫]/g, "") || "0";
                const stock = parseInt(row.querySelector("td:nth-child(6)")?.innerText || "0");

                const price = parseInt(priceText);

                let show = true;

                // 🔍 Tìm kiếm theo tên
                if (keyword && !name.includes(keyword)) show = false;

                // 🎯 Lọc danh mục
                if (danhMuc && !category.includes(danhMuc)) show = false;

                // 💰 Lọc theo giá
                if (gia == "1" && price >= 100000) show = false;
                if (gia == "2" && (price < 100000 || price > 500000)) show = false;
                if (gia == "3" && price <= 500000) show = false;

                // 📦 Lọc theo tồn kho
                if (ton == "1" && stock >= 5) show = false;
                if (ton == "2" && (stock < 5 || stock > 20)) show = false;
                if (ton == "3" && stock <= 20) show = false;

                row.style.display = show ? "" : "none";
            });
        }

        document.getElementById("filterDanhMuc").addEventListener("change", applyFilters);
        document.getElementById("filterGia").addEventListener("change", applyFilters);
        document.getElementById("filterTon").addEventListener("change", applyFilters);
        document.getElementById("btnSearch").addEventListener("click", applyFilters);
        document.getElementById("searchInput").addEventListener("keyup", applyFilters);
    </script>

    <style>

        /* =========================
           THỐNG KÊ (CARD)
        ========================= */
        .stat-card {
            height: 130px;
            border-radius: 18px;
            padding: 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

            .stat-card p {
                font-size: 14px;
                opacity: .9;
                margin-bottom: 4px;
            }

            .stat-card i {
                font-size: 38px;
                opacity: .85;
            }


        /* =========================
           FILTER
        ========================= */
        .filter-box {
            display: flex;
            gap: 12px;
        }

            .filter-box select {
                width: 180px;
            }


        /* =========================
           TABLE HEAD
        ========================= */
        .table-header {
            background: #d32f2f;
            color: white;
            font-size: 14px;
        }


        /* =========================
           PRODUCT IMAGE
        ========================= */
        .product-thumb {
            cursor: pointer;
            transition: .25s;
        }

            .product-thumb:hover {
                transform: scale(1.06);
            }


        /* =========================
           GRID CARD
        ========================= */
        .product-card {
            border-radius: 18px;
            overflow: hidden;
            transition: .25s;
        }

            .product-card img {
                width: 100%;
                height: 190px;
                object-fit: cover;
            }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0,0,0,.15);
            }

            .product-card .text-section {
                padding: 12px;
            }

            .product-card h6 {
                font-weight: 600;
                margin-bottom: 6px;
            }

            .product-card .price {
                color: #d32f2f;
                font-weight: 700;
            }

            .product-card .category {
                font-size: 12px;
                opacity: .7;
            }
    </style>
}
