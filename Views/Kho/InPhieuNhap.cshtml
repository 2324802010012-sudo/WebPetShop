@model WebPetShop.Models.PhieuNhap
@{
    Layout = null; // không dùng layout, để in sạch sẽ
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Phiếu nhập kho - @Model.MaPn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { font-family: "Times New Roman", serif; font-size: 16px; }
        .bordered { border: 1px solid #000; }
        .header { border-bottom: 3px solid #dc3545; padding-bottom: 10px; margin-bottom: 20px; }
        .title { text-align: center; color: #dc3545; text-transform: uppercase; font-weight: bold; font-size: 22px; margin-bottom: 20px; }
        .info-table td { padding: 4px 8px; }
        .table th, .table td { vertical-align: middle !important; }
        .signature { margin-top: 60px; text-align: center; }
        .signature div { display: inline-block; width: 40%; }
       @@media print {
            @@page { size: A4; margin: 20mm; }
            .no-print { display: none; }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="header d-flex justify-content-between">
            <div>
                <h5 class="fw-bold text-danger mb-0">PETSHOP</h5>
                <div>Địa chỉ: 123 Nguyễn Huệ, TP.HCM</div>
                <div>Hotline: 0901 234 567</div>
            </div>
            <div class="text-end">
                <h6 class="fw-bold">Mã phiếu: <span class="text-danger">@Model.MaPn</span></h6>
                <div>Ngày in: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
        </div>

        <div class="title">PHIẾU NHẬP KHO</div>

        <table class="info-table w-100 mb-4">
            <tr>
                <td><strong>Nhà cung cấp:</strong> @Model.MaNccNavigation?.TenNcc</td>
                <td><strong>Nhân viên nhập:</strong> @Model.MaNhanVienNavigation?.HoTen</td>
            </tr>
            <tr>
                <td><strong>Ngày nhập:</strong> @Model.NgayNhap?.ToString("dd/MM/yyyy HH:mm")</td>
                <td><strong>Tổng tiền:</strong> <span class="fw-bold text-danger">@Model.TongTien?.ToString("N0") ₫</span></td>
            </tr>
        </table>

        <table class="table table-bordered align-middle">
            <thead class="table-danger">
                <tr>
                    <th>#</th>
                    <th>Tên sản phẩm</th>
                    <th class="text-center">Số lượng</th>
                    <th class="text-center">Đơn giá</th>
                    <th class="text-center">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = 1;
                    decimal tong = 0;
                    foreach (var c in Model.ChiTietPhieuNhaps)
                    {
                        var thanhTien = (c.SoLuong ?? 0) * (c.DonGia ?? 0);
                        tong += thanhTien;
                        <tr>
                            <td class="text-center">@stt++</td>
                            <td>@c.MaSpNavigation?.TenSp</td>
                            <td class="text-center">@c.SoLuong</td>
                            <td class="text-end">@c.DonGia?.ToString("N0") ₫</td>
                            <td class="text-end fw-semibold">@thanhTien.ToString("N0") ₫</td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr class="fw-bold">
                    <td colspan="4" class="text-end">TỔNG CỘNG:</td>
                    <td class="text-end text-danger">@tong.ToString("N0") ₫</td>
                </tr>
            </tfoot>
        </table>

        <div class="signature">
            <div>
                <strong>Người lập phiếu</strong><br />
                (Ký, ghi rõ họ tên)
            </div>
            <div>
                <strong>Nhân viên nhập kho</strong><br />
                (Ký, ghi rõ họ tên)
            </div>
        </div>

        <div class="text-center mt-4 no-print">
            <button onclick="window.print()" class="btn btn-danger">
                <i class="fa fa-print me-1"></i>In phiếu
            </button>
        </div>
    </div>

</body>
</html>
