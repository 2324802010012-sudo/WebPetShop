@{
    Layout = null;
    var hoTen = Context.Session.GetString("HoTen") ?? "Nhân viên kho";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Kho PetShop</title>

    <!-- ⚙️ Base định tuyến cho Razor (rất quan trọng) -->
    <base href="~/" />

    <!-- ✅ Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --main-red: #d62828;
            --hover-red: #b71c1c;
            --bg-light: #fff5f5;
        }

        body {
            background-color: #fafafa;
            font-family: 'Poppins', sans-serif;
        }

        /* 🟥 SIDEBAR */
        .sidebar {
            width: 240px;
            height: 100vh;
            background: var(--main-red);
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            z-index: 100;
        }

            .sidebar .brand {
                font-size: 1.4rem;
                font-weight: 700;
                text-align: center;
                padding: 20px;
                background: var(--hover-red);
                border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            }

            .sidebar a {
                color: #ffeaea;
                padding: 12px 20px;
                text-decoration: none;
                transition: 0.25s;
                font-weight: 500;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background: #fff;
                    color: var(--main-red);
                    font-weight: 600;
                    border-radius: 0 30px 30px 0;
                }

        /* 🔸 MAIN CONTENT */
        .main {
            margin-left: 240px;
            min-height: 100vh;
            background-color: #fff;
        }

        /* 🔸 TOPBAR */
        .topbar {
            background: #ffffff;
            border-bottom: 2px solid var(--main-red);
            padding: 10px 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 50;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
            color: #333;
        }

            .user-info a {
                border-color: var(--main-red);
                color: var(--main-red);
            }

                .user-info a:hover {
                    background-color: var(--main-red);
                    color: #fff;
                }

        /* 🔸 SCROLLBAR */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--main-red);
            border-radius: 4px;
        }
    </style>
</head>

<body>
    <!-- 🧭 SIDEBAR -->
    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="brand">
            <i class="fa-solid fa-warehouse me-2"></i> Kho PetShop
        </div>

        <a asp-controller="Kho" asp-action="Index"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
            <i class="fa-solid fa-gauge me-2"></i> Tổng quan
        </a>

        <!-- ⭐ MỤC MỚI – ĐƠN CẦN XỬ LÝ -->
        <a asp-controller="Kho" asp-action="DonChoXuLy"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "DonChoXuLy" ? "active" : "")">
            <i class="fa-solid fa-clipboard-check me-2"></i> Đơn cần xử lý
        </a>


        <a asp-controller="Kho" asp-action="HangHoa"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "HangHoa" ? "active" : "")">
            <i class="fa-solid fa-boxes-stacked me-2"></i> Hàng hóa
        </a>

        <a asp-controller="Kho" asp-action="NhapKho"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "NhapKho" ? "active" : "")">
            <i class="fa-solid fa-file-import me-2"></i> Phiếu nhập
        </a>

        <a asp-controller="Kho" asp-action="XuatKho"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "XuatKho" ? "active" : "")">
            <i class="fa-solid fa-file-export me-2"></i> Phiếu xuất
        </a>

        <a asp-controller="Kho" asp-action="BaoCao"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "BaoCao" ? "active" : "")">
            <i class="fa-solid fa-chart-line me-2"></i> Báo cáo
        </a>
    </div>


    <!-- 🧩 MAIN CONTENT -->
    <div class="main">
        <!-- TOPBAR -->
        <div class="topbar">
            <div class="fw-bold text-danger fs-5">
                <i class="fa-solid fa-clipboard-list me-2"></i> Hệ thống quản lý kho
            </div>
            <div class="user-info">
                <i class="fa-solid fa-user-circle text-danger fs-5"></i>
                <span>@hoTen</span>
                <a href="/Auth/Logout" class="btn btn-outline-danger btn-sm ms-2">
                    <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                </a>
            </div>
        </div>

        <!-- BODY -->
        <div class="p-4 bg-light">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @RenderBody()
        </div>
    </div>

    <!-- ✅ JAVASCRIPT PHẢI ĐÚNG THỨ TỰ -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
