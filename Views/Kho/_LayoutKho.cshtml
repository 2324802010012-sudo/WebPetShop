@{
    Layout = null;
    var hoTen = Context.Session.GetString("HoTen") ?? "Nhân viên kho";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Kho PetShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --main-red: #d62828;
            --hover-red: #b71c1c;
            --bg-light: #fff5f5;
        }

        body {
            background-color: #fafafa;
            font-family: 'Poppins', sans-serif;
        }

        /* 🔸 Sidebar */
        .sidebar {
            width: 240px;
            height: 100vh;
            background: var(--main-red);
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            z-index: 100;
            box-shadow: 2px 0 10px rgba(0,0,0,0.08);
        }

            .sidebar .brand {
                font-size: 1.4rem;
                font-weight: 700;
                text-align: center;
                padding: 20px;
                background: var(--hover-red);
                border-bottom: 1px solid rgba(255,255,255,0.2);
                letter-spacing: 0.5px;
            }

            .sidebar a {
                color: #ffeaea;
                padding: 12px 20px;
                text-decoration: none;
                transition: 0.25s;
                font-weight: 500;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background: #fff;
                    color: var(--main-red);
                    font-weight: 600;
                    border-radius: 0 30px 30px 0;
                }

        /* 🔸 Main content */
        .main {
            margin-left: 240px;
            min-height: 100vh;
            background-color: #fff;
        }

        /* 🔸 Topbar */
        .topbar {
            background: #ffffff;
            border-bottom: 2px solid var(--main-red);
            padding: 10px 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 50;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
            color: #333;
        }

            .user-info a {
                border-color: var(--main-red);
                color: var(--main-red);
            }

                .user-info a:hover {
                    background-color: var(--main-red);
                    color: #fff;
                }

        /* 🔸 Scrollbar đẹp */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--main-red);
            border-radius: 4px;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand">
            <i class="fa-solid fa-warehouse me-2"></i> Kho PetShop
        </div>

        <a asp-controller="Kho" asp-action="Index" class="active">
            <i class="fa-solid fa-gauge me-2"></i> Tổng quan
        </a>
        <a asp-controller="Kho" asp-action="HangHoa">
            <i class="fa-solid fa-boxes-stacked me-2"></i> Hàng hóa
        </a>
        <a asp-controller="Kho" asp-action="NhapKho">
            <i class="fa-solid fa-file-import me-2"></i> Phiếu nhập
        </a>
        <a asp-controller="Kho" asp-action="XuatKho">
            <i class="fa-solid fa-file-export me-2"></i> Phiếu xuất
        </a>
        <a asp-controller="Kho" asp-action="BaoCao">
            <i class="fa-solid fa-chart-line me-2"></i> Báo cáo
        </a>
    </div>

    <!-- Main -->
    <div class="main">
        <!-- Topbar -->
        <div class="topbar">
            <div class="fw-bold text-danger fs-5">
                <i class="fa-solid fa-clipboard-list me-2"></i> Hệ thống quản lý kho
            </div>
            <div class="user-info">
                <i class="fa-solid fa-user-circle text-danger fs-5"></i>
                <span>@hoTen</span>
                <a href="/Auth/Logout" class="btn btn-outline-danger btn-sm ms-2">
                    <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                </a>
            </div>
        </div>

        <!-- Nội dung trang con -->
        <div class="p-4 bg-light">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
