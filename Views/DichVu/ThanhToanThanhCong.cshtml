@model HoaDon

<div class="container py-5" style="max-width:600px;">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-success fw-bold text-center mb-3">
            🎉 Thanh toán thành công!
        </h2>

        <p class="text-center text-muted">
            Cảm ơn bạn đã sử dụng dịch vụ của PetShop.
        </p>

        <hr />

        <h5 class="fw-bold mb-3">🧾 Thông tin hóa đơn</h5>

        <p><strong>Mã hóa đơn:</strong> #@Model.MaHd</p>
        <p><strong>Mã ký gửi:</strong> @Model.MaKyGui</p>
        <p>
            <strong>Ngày lập:</strong> @Model.NgayLap?.ToString("dd/MM/yyyy HH:mm")
           
        </p>

        <p><strong>Thanh toán qua:</strong> @Model.HinhThuc</p>

        <p>
            <strong>Tổng tiền:</strong>
            <span class="text-danger fw-bold">@Model.SoTien.ToString("N0") ₫</span>
        </p>

        <div class="text-center mt-4">
            <a href="/DichVu/LichSuKyGui" class="btn btn-primary rounded-pill px-4">
                Xem lịch sử ký gửi
            </a>
        </div>
    </div>
</div>
