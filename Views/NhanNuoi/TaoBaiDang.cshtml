@model WebPetShop.Models.BaiDangNhanNuoi
@{
    ViewData["Title"] = "Tạo bài đăng nhận nuôi";
    Layout = "~/Views/Shared/_LayoutLeTan.cshtml";
    var info = ViewBag.ThongTin;
}

<div class="container mt-4">
    <h2 class="mb-4">Tạo bài đăng nhận nuôi</h2>

    <div class="row">

        <!-- THÔNG TIN THÚ CƯNG -->
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">Thông tin thú cưng</div>
                <div class="card-body text-center">
                    <img src="/images/default-pet.jpg" class="img-fluid rounded mb-3" style="max-height:300px;" />

                    @if (info != null)
                    {
                        <h4>@info.Ten</h4>
                        <p>@info.GiongLoai • @info.Tuoi tuổi • @info.LoaiThuCung</p>
                    }
                </div>
            </div>
        </div>

        <!-- FORM -->
        <div class="col-md-7">
            <form id="formDangBai" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="MaThuCungNhanNuoi" />

                <div class="mb-3">
                    <label asp-for="TieuDe"></label>
                    <input asp-for="TieuDe" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="6"></textarea>
                </div>

                <div class="mb-3">
                    <label>Hình ảnh</label>
                    <input type="file" name="hinhAnh" class="form-control" />
                </div>

                <div id="alertBox"></div>

                <button type="button" id="btnDang" class="btn btn-success">
                    <i class="fas fa-paper-plane"></i> Đăng bài ngay
                </button>

            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("btnDang").addEventListener("click", async () => {

        let form = document.getElementById("formDangBai");
        let formData = new FormData(form);

        let res = await fetch("/NhanNuoi/TaoBaiDang_Ajax", {
            method: "POST",
            body: formData
        });

        let json = await res.json();

        if (json.success) {
            document.getElementById("alertBox").innerHTML =
                `<div class="alert alert-success">${json.message}</div>`;

            // === CHUYỂN TRANG SAU THÀNH CÔNG ===
            setTimeout(() => window.location.href = "/NhanNuoi/DanhSachNhanNuoi", 1200);

        } else {
            document.getElementById("alertBox").innerHTML =
                `<div class="alert alert-danger">${json.message}</div>`;
        }
    });
</script>
