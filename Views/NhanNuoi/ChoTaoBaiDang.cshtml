@model List<WebPetShop.Models.ThuCungNhanNuoiView>
@{
    ViewData["Title"] = "Chờ tạo bài đăng nhận nuôi";
    Layout = "~/Views/Shared/_LayoutLeTan.cshtml";
}

<div class="container mt-4">
    <h2 class="text-success mb-4">
        <i class="fas fa-paw"></i> Thú cưng chờ đăng bài nhận nuôi
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary">Không có thú cưng nào đang chờ đăng bài.</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow">
                        <img src="@item.HinhAnh" class="card-img-top" style="height:220px; object-fit:cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.TenThuCung</h5>
                            <p class="text-muted small">
                                @item.GiongLoai • @(item.Tuoi ?? 0) tuổi
                            </p>
                            <div class="mt-auto">
                                <a asp-action="TaoBaiDang"
                                   asp-route-maNhanNuoi="@item.MaNhanNuoi"
                                   class="btn btn-success btn-sm w-100">
                                    <i class="fas fa-heart"></i> Tạo bài đăng nhận nuôi
                                </a>

                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>